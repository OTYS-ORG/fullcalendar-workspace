{
  "private": true,
  "name": "@fullcalendar/workspace",
  "version": "0.0.0",
  "devDependencies": {
    "@fullcalendar/standard-scripts": "workspace:*",
    "@fullcalendar/workspace-scripts": "workspace:*"
  },
  "scripts": {
    "postinstall": "workspace-scripts postinstall",
    "lint": "standard-scripts lint",
    "build": "standard-scripts build",
    "dev": "standard-scripts dev",
    "test": "standard-scripts test",
    "test:dev": "standard-scripts test --dev",
    "clean": "standard-scripts clean",
    "ci": "pnpm run lint --all && pnpm run build --all && pnpm run test --all",
    "release": "pnpm run ci && echo 'TODO: release stuff'"
  },
  "type": "module",
  "monorepoConfig": {
    "archiveSubtrees": [
      "./standard",
      "./premium"
    ],
    "filterSubtrees": [
      "./standard",
      "./premium",
      "./scripts"
    ]
  },
  "engines": {
    "pnpm": ">=7.9.5"
  },
  "pnpm": {
    "packageExtensions": {
      "@nuxt/components": {
        "peerDependenciesMeta": {
          "consola": {
            "optional": true
          }
        }
      }
    },
    "peerDependencyRules": {
      "allowAny": [
        "postcss"
      ]
    },
    "patchedDependencies": {
      "@pnpm/make-dedicated-lockfile@0.3.20": "scripts/patches/@pnpm__make-dedicated-lockfile@0.3.20.patch",
      "jasmine-jquery@2.1.1": "standard/scripts/patches/jasmine-jquery@2.1.1.patch"
    }
  }
}
