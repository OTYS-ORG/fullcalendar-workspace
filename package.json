{
  "private": true,
  "name": "@fullcalendar/workspace",
  "version": "0.0.0",
  "type": "module",
  "devDependencies": {
    "@fullcalendar/workspace-scripts": "workspace:*"
  },
  "scripts": {
    "pnpm:devPreinstall": "workspace-scripts monorepo:preflight",
    "build": "workspace-scripts monorepo:run build",
    "dev": "workspace-scripts monorepo:run build --dev --watch",
    "test": "workspace-scripts monorepo:run test --dev --watch",
    "test:ci": "workspace-scripts monorepo:run test",
    "clean": "workspace-scripts monorepo:run clean",
    "lint": "workspace-scripts monorepo:run lint",
    "ci": "workspace-scripts monorepo:run lint build test --all",
    "ts": "./scripts/bin/ts.js && tsc -b"
  },
  "monorepoConfig": {
    "defaultSubtrees": [
      "./standard",
      "./premium"
    ]
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7.8.0"
  },
  "pnpm": {
    "packageExtensions": {
      "@nuxt/components": {
        "peerDependenciesMeta": {
          "consola": {
            "optional": true
          }
        }
      }
    },
    "peerDependencyRules": {
      "allowAny": [
        "postcss"
      ]
    },
    "patchedDependencies": {
      "@pnpm/make-dedicated-lockfile@0.3.20": "scripts/patches/@pnpm__make-dedicated-lockfile@0.3.20.patch",
      "concurrently@7.3.0": "scripts/patches/concurrently@7.3.0.patch"
    }
  }
}
