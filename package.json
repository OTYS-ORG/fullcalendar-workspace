{
  "private": true,
  "name": "@fullcalendar/workspace",
  "version": "0.0.0",
  "type": "module",
  "devDependencies": {
    "@fullcalendar/workspace-scripts": "workspace:*"
  },
  "scripts": {
    "postinstall": "workspace-scripts postinstall",
    "build-all": "workspace-scripts build",
    "build": "workspace-scripts build --filter='./standard/**' --filter='./premium/**'",
    "dev": "workspace-scripts dev",
    "test": "workspace-scripts karma",
    "clean": "workspace-scripts clean",
    "lint": "workspace-scripts lint",
    "ci": "workspace-scripts ci"
  },
  "monorepoConfig": {
    "defaultSubtrees": [
      "./standard",
      "./premium"
    ]
  },
  "engines": {
    "pnpm": ">=7.9.5"
  },
  "pnpm": {
    "packageExtensions": {
      "@nuxt/components": {
        "peerDependenciesMeta": {
          "consola": {
            "optional": true
          }
        }
      }
    },
    "peerDependencyRules": {
      "allowAny": [
        "postcss"
      ]
    },
    "patchedDependencies": {
      "@pnpm/make-dedicated-lockfile@0.3.20": "scripts/patches/@pnpm__make-dedicated-lockfile@0.3.20.patch"
    }
  }
}
