{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "package.json",
        "dist/.tsc/**/*"
      ],
      "outputs": [
        "dist/**/*.{json,js,cjs,mjs}",
        "!dist/.tsc/**/*"
      ]
    },
    "test": {
      "dependsOn": ["build", "^test"]
    },
    "clean": {
      "dependsOn": [],
      "cache": false
    },
    "lint": {
      "dependsOn": [],
      "inputs": [
        "src/**/*"
      ]
    }
  },
  "globalDependencies": [
    "package.json",
    "scripts/package.json",
    "scripts/config/**/*",
    "scripts/src/**/*"
  ]
}
