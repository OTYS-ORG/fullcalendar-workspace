{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["package.json", "dist/.tsc/**/*"],
      "outputs": ["dist/**/*.{json,js,cjs,mjs}", "!dist/.tsc/**/*"]
    },
    "clean": {
      "cache": false,
      "dependsOn": []
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["src/**/*"]
    }
  },
  "globalDependencies": [
    "*.{json,js,cjs}",
    "scripts/*.{json,js,cjs}",
    "scripts/src/**/*"
  ]
}
