{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["BUILD_ENV"],
      "inputs": [
        "./package.json",
        "./lib/**",
        "./dist/.tsout/**"
      ],
      "outputs": [
        "./dist/**",
        "!./dist/.tsout/**"
      ]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "inputs": [
        "./*.{ts,js,cjs}",
        "./{src,lib,tests,scripts,config}/**"
      ]
    }
  }
}
