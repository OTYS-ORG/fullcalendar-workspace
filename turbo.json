{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["BUILD_ENV"],
      "inputs": [
        "./*.{ts,js,cjs,json}",
        "./{src,scripts,config}/**"
      ],
      "outputs": [
        "./dist/**",
        "!./dist/.tsout",
        "!./dist/tsconfig.tsbuildinfo"
      ]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "inputs": [
        "./*.{ts,js,cjs}",
        "./{src,scripts,config,tests}/**"
      ]
    }
  }
}
