{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "./package.json",
        "./dist/.tsout/**/*"
      ],
      "outputs": [
        "./dist/**/*",
        "!./dist/.tsout/**/*"
      ]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "clean": {
      "dependsOn": [],
      "cache": false
    },
    "lint": {
      "dependsOn": [],
      "inputs": [
        "./*.{js,cjs,ts}",
        "./{scripts,config,src,tests}/**/*"
      ]
    }
  }
}
