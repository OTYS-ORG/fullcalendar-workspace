{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "preflight": {
      "dependsOn": ["^preflight"],
      "inputs": ["package.json"],
      "outputs": ["dist/package.json", "dist/.npmignore"]
    },
    "tsc": {
      "dependsOn": ["^tsc", "preflight"],
      "inputs": ["src/**/*", "tsconfig.json"],
      "outputs": ["dist/.tsc/**/*"]
    },
    "build": {
      "dependsOn": ["^build", "tsc"],
      "inputs": ["src/**/*", "package.json"],
      "outputs": ["dist/**/*", "!dist/.tsc/**/*"]
    },
    "dev": {
      "dependsOn": []
    },
    "//#dev:tsc": {
      "dependsOn": []
    },
    "clean": {
      "dependsOn": []
    }
  }
}
