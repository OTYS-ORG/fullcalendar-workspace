{
  "name": "@fullcalendar/resource-daygrid",
  "version": "6.0.0-beta.3",
  "title": "FullCalendar Resource Day Grid Plugin",
  "description": "Displays events in individual columns for days and resources",
  "docs": "https://fullcalendar.io/docs/resource-daygrid-view",
  "dependencies": {
    "@fullcalendar/daygrid": "workspace:*",
    "@fullcalendar/premium-common": "workspace:*"
  },
  "peerDependencies": {
    "@fullcalendar/core": "workspace:*",
    "@fullcalendar/resource": "workspace:*"
  },
  "devDependencies": {
    "@fullcalendar/core": "workspace:*",
    "@fullcalendar/resource": "workspace:*",
    "@fullcalendar/standard-scripts": "workspace:*"
  },
  "scripts": {
    "build": "standard-scripts pkg:build",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint ."
  },
  "type": "module",
  "tsConfig": {
    "extends":  "@fullcalendar/standard-scripts/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": { "iife": true },
      "./internal": {}
    },
    "iifeGlobals": {
      ".": "FullCalendar.ResourceDayGrid",
      "./internal": "FullCalendar.ResourceDayGrid.Internal"
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
