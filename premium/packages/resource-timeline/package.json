{
  "name": "@fullcalendar/resource-timeline",
  "version": "7.0.0-beta.0",
  "title": "FullCalendar Resource Timeline Plugin",
  "description": "Display events and resources on a horizontal time axis",
  "keywords": [
    "scheduler",
    "resource",
    "timeline"
  ],
  "homepage": "https://fullcalendar.io/docs/timeline-view",
  "dependencies": {
    "@fullcalendar/premium-common": "7.0.0-beta.0",
    "@fullcalendar/scrollgrid": "7.0.0-beta.0",
    "@fullcalendar/timeline": "7.0.0-beta.0"
  },
  "peerDependencies": {
    "@fullcalendar/core": "7.0.0-beta.0",
    "@fullcalendar/resource": "7.0.0-beta.0"
  },
  "devDependencies": {
    "@fullcalendar/core": "7.0.0-beta.0",
    "@fullcalendar/resource": "7.0.0-beta.0",
    "@fullcalendar-scripts/standard": "0.0.1-beta.0"
  },
  "scripts": {
    "build": "standard-scripts pkg:build",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint ."
  },
  "type": "module",
  "tsConfig": {
    "extends": "@fullcalendar-scripts/standard/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": {
        "iife": true
      },
      "./internal": {}
    },
    "iifeGlobals": {
      ".": "FullCalendar.ResourceTimeline",
      "./internal": "FullCalendar.ResourceTimeline.Internal"
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
