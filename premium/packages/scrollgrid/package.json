{
  "name": "@fullcalendar/scrollgrid",
  "version": "7.0.0-beta.0",
  "title": "FullCalendar ScrollGrid Plugin",
  "description": "Tabular data chunked into scrollable panes",
  "dependencies": {
    "@fullcalendar/premium-common": "7.0.0-beta.0"
  },
  "peerDependencies": {
    "@fullcalendar/core": "7.0.0-beta.0"
  },
  "devDependencies": {
    "@fullcalendar/core": "7.0.0-beta.0",
    "@fullcalendar-scripts/standard": "0.0.1-beta.0"
  },
  "scripts": {
    "build": "standard-scripts pkg:build",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint ."
  },
  "type": "module",
  "tsConfig": {
    "extends": "@fullcalendar-scripts/standard/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": {
        "iife": true
      },
      "./internal": {}
    },
    "iifeGlobals": {
      ".": "FullCalendar.ScrollGrid",
      "./internal": "FullCalendar.ScrollGrid.Internal"
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
