{
  "private": true,
  "name": "@fullcalendar/premium-tests",
  "version": "0.0.0",
  "type": "module",
  "dependencies": {
    "@fullcalendar/core": "workspace:*",
    "@fullcalendar/daygrid": "workspace:*",
    "@fullcalendar/interaction": "workspace:*",
    "@fullcalendar/list": "workspace:*",
    "@fullcalendar/premium-common": "workspace:*",
    "@fullcalendar/resource-daygrid": "workspace:*",
    "@fullcalendar/resource-timegrid": "workspace:*",
    "@fullcalendar/resource-timeline": "workspace:*",
    "@fullcalendar/scrollgrid": "workspace:*",
    "@fullcalendar/standard-tests": "workspace:*",
    "@fullcalendar/timegrid": "workspace:*",
    "@fullcalendar/timeline": "workspace:*",
    "tslib": "^2.1.0",
    "xhr-mock": "^2.5.1"
  },
  "devDependencies": {
    "@fullcalendar/standard-scripts": "workspace:*",
    "@types/jasmine": "^3.3.12",
    "@types/jasmine-jquery": "^1.5.33",
    "@types/jquery": "^3.3.29"
  },
  "scripts": {
    "build": "standard-scripts pkg:build",
    "test": "standard-scripts pkg:test",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint ."
  },
  "tsConfig": {
    "extends":  "@fullcalendar/standard-scripts/config/tsconfig.browser.json",
    "compilerOptions": {
      "types": ["jasmine", "jasmine-jquery", "jquery"],
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": { "iife": true, "iifeGenerator": "./scripts/generate-index-iife.js" }
    },
    "iifeGlobals": {
      "*": ""
    }
  },
  "karmaConfig": {
    "files": [
      "./dist/index.global.js"
    ]
  }
}
